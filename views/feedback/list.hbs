<div class="container text-center">
    {{!-- table.table.table-bordered>tr*3>th*7 --}}
    <table class="table bordered">
        <tr>
            <th class="h2 text text-success" colspan="6" >Feedback List</th>
            <th>
                <a class="btn btn-primary" href="/feedback/add">Add new feedback</a>
            </th>
        </tr>
        <tr>
            <th>NameCustomer</th>
            <th>PhoneNumber</th>
            <th>Address</th>
            <th>Feedback</th>
            <th>Function</th>


        </tr>
        {{!-- heach --}}
        {{#each feedback }}
        <tr>
            <th>{{ NameCustomer }}</th>
            <th>{{ Phonenumber }}</th>
            <th>{{ Address }}</th>
            <th>{{ Feedback }}</th>
            <th>
                <a class="btn btn-warning" href="/feedback/edit/{{_id}}">Edit</a>
                <a class="btn btn-danger" href="/feedback/delete/{{_id}}"
                    onclick="return confirm('Do you want to delete this feedback?');">Delete</a>
            </th>
        </tr>
        {{/each}}
    </table>
</div>